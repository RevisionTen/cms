{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block wrapper %}
    <div class="mt-5 mb-5 ml-auto mr-auto pb-3 bg-white rounded" style="width: 400px;align-self: center;">
        <div class="pt-5 pb-3 text-center">
            <img class="h-auto w-25" src="{{ asset('/bundles/cms/icons/logo.png') }}"><br/>
            <h3 class="mt-3 mb-0">RevisionTen CMS</h3>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="ml-3 mr-3 alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% include '@cms/Security/login-form.html.twig' %}
    </div>
{% endblock %}
