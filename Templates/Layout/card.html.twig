{% set imagePosition = element.data.imagePosition %}

{% if imagePosition == 'top' %}
    {% include '@cms/Layout/card-top.html.twig' %}
{% elseif imagePosition == 'bottom' %}
    {% include '@cms/Layout/card-bottom.html.twig' %}
{% elseif imagePosition == 'left' %}
    {% include '@cms/Layout/card-left.html.twig' %}
{% elseif imagePosition == 'right' %}
    {% include '@cms/Layout/card-right.html.twig' %}
{% elseif imagePosition == 'background' %}
    {% include '@cms/Layout/card-background.html.twig' %}
{% elseif imagePosition == 'background-fitted' %}
    {% include '@cms/Layout/card-background-fitted.html.twig' %}
{% else %}
    {% include '@cms/Layout/card-top.html.twig' %}
{% endif %}
