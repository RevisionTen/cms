<div
    {{ editorAttr(element, edit, 'bg-warning') }}
    class="card card-imageposition-{{ imagePosition }} {{ elementClasses(element) }}"
>
    <img class="card-img-top h-auto" title="{{ element.data.title }}" alt="{{ element.data.title }}" src="{{ web_image(element.data.image).cropResize(1920, 1920) }}">

    <div class="card-body">
        {% if element.data.title %}
            <h5 class="card-title">{{ element.data.title }}</h5>
        {% endif %}

        {{ element.data.text|raw }}

        {% if element.data.buttonText is defined %}
            {% if element.data.page.doctrineEntity is defined  %}
                {% set path = element.data.page.doctrineEntity.path %}
                <a class="btn btn-primary" href="{{ path }}">{{ element.data.buttonText }}</a>
            {% endif %}
        {% endif %}
    </div>
</div>
