<div {{ editorAttr(element, edit, 'bg-info') }}>
    {% set iframeMarkup = '<iframe class="embed-responsive-item" src="https://www.youtube-nocookie.com/embed/'~element.data.youtubeId~'?rel=0" allowfullscreen allow="autoplay; encrypted-media"></iframe>' %}
    {% set id = 'youtube-'~element.uuid %}

    <div id="{{ id }}" class="embed-responsive embed-responsive-16by9">

        {% if element.data.optin is defined and element.data.optin %}
            <div class="embed-responsive-item bg-light d-flex justify-content-center align-items-center" >
                <div class="text-center">
                    <p class="small">
                        {{ 'This video is embedded from Youtube. <br>Googles <a target="_blank" href="%link%">privacy policy</a> applies.'|trans({'%link%': 'https://policies.google.com/privacy?hl=de&amp;gl=de'})|raw }}
                    </p>
                    <button class="btn btn-primary" onclick="document.getElementById('{{ id }}').innerHTML = '{{ iframeMarkup }}'">{{ 'Enable Video'|trans }}</button>
                </div>
            </div>
        {% else %}
            {{ iframeMarkup|raw }}
        {% endif %}

    </div>
</div>
