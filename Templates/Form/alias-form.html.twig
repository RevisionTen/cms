{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block content_title %}
    {% if title is defined %}
        {{ title|trans }}
    {% endif %}
{% endblock %}

{% block main %}
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.path) }}
        <div class="input-group">
            {% if websiteUrl %}
                <div class="input-group-prepend">
                    <span class="input-group-text">{{ websiteUrl }}</span>
                </div>
            {% endif %}
            {{ form_widget(form.path) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
