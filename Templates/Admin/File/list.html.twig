{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block content_header %}
    <div class="content-header-title">
        <h1 class="title">{{ 'Files'|trans }}</h1>
    </div>
    <div class="global-actions">
        <div class="button-action">
            <a class="btn btn-success" href="{{ path('cms_file_create') }}">
                <span class="fa fa-plus"></span> {{ 'Add file'|trans }}
            </a>
        </div>
    </div>
{% endblock content_header %}

{% block body_class %}files list{% endblock %}

{% block main %}
    <div class="table-responsive">
        <table class="table datagrid">
            <thead>
                <tr>
                    <th>
                        <span>{{ 'Title'|trans }}</span>
                    </th>
                    <th>
                        <span>{{ 'MimeType'|trans }}</span>
                    </th>
                    <th>
                        <span>{{ 'Size'|trans }}</span>
                    </th>
                    <th>
                        <span>{{ 'Created'|trans }}</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for file in files %}
                    <tr>
                        <td><a href="{{ file.path }}" target="_blank">{{ file.title }}</a></td>
                        <td>
                            {{ file.mimeType ? file.mimeType : '' }}
                        </td>
                        <td>
                            {{ file.size ? ((file.size / 1000)|number_format(2)) ~ ' KB' : '' }}
                        </td>
                        <td>
                            {{ file.created|date('d.m.Y h:i') }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
