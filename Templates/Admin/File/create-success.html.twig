{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block content_title %}
    {{ 'Files'|trans }}
{% endblock %}

{% block body_class %}files{% endblock %}

{% block main %}
    <div class="p-3">
        <h4>
            {{ 'Your file "%title%" has been uploaded!'|trans({'%title%': title}) }}
        </h4>
        <p>
            <code>{{ file.path }}</code>
        </p>
        <p>
            <a class="btn btn-primary" href="{{ path('cms_file_list') }}">{{ 'Back to file list'|trans }}</a>
        </p>
    </div>
{% endblock %}
