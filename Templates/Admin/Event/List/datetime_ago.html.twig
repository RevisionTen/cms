{% set hours = ((date().timestamp - value.timestamp)/60/60)|round(0) %}
{% if hours < 1 %}
    {% set minutes = ((date().timestamp - event.created.timestamp)/60)|round(0) %}
    {% if minutes < 1 %}
        {{ 'admin.label.eventNow'|trans({}, 'cms') }}
    {% elseif minutes == 1 %}
        {{ 'admin.label.event1MinuteAgo'|trans({}, 'cms') }}
    {% else %}
        {{ 'admin.label.eventSomeMinutesAgo'|trans({'%minutes%': minutes}, 'cms') }}
    {% endif %}
{% elseif hours < 24 %}
    {% if hours == 1 %}
        {{ 'admin.label.event1HourAgo'|trans({}, 'cms') }}
    {% else %}
        {{ 'admin.label.eventSomeHoursAgo'|trans({'%hours%': hours}, 'cms') }}
    {% endif %}
{% else %}
    {% set days = (hours/24)|round(0) %}
    {% if days == 1 %}
        {{ 'admin.label.event1DayAgo'|trans({}, 'cms') }}
    {% else %}
        {{ 'admin.label.eventSomeDaysAgo'|trans({'%days%': days}, 'cms') }}
    {% endif %}
{% endif %}
