{% extends '@cms/EasyAdmin/default/list.html.twig' %}

{% block global_actions %}
    {{- parent() -}}

    {% if is_granted('page_create') %}
        <div class="button-action">
            <a class="btn btn-success" href="{{ path('cms_create_page') }}">
                <span class="fa fa-plus"></span> {{ 'admin.btn.addPage'|trans({}, 'cms') }}
            </a>
        </div>
    {% endif %}
{% endblock global_actions %}

{% block body_javascript %}
    {{ parent() }}

    <script>
        window.translations = {
            confirmDelete: '{{ 'admin.label.confirmDelete'|trans({}, 'cms') }}',
            confirmDuplicate: '{{ 'admin.label.confirmDuplicate'|trans({}, 'cms') }}'
        };
    </script>
{% endblock body_javascript %}
